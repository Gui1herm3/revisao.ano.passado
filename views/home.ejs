<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sobre Biologia</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #eaf7dc; /* Verde pálido */
            margin: 0;
            padding: 20px;
        }

        header {
            background-color: #5e9641; /* Verde musgo */
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        h1 {
            margin: 0;
        }

        main {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        label {
            color: #333;
            font-weight: bold;
        }

        input[type="text"],
        input[type="file"],
        textarea {
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button {
            background-color: #5e9641; /* Verde musgo */
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
        }

        button:hover {
            background-color: #7cbf63; /* Verde mais claro */
        }

        nav {
            text-align: center;
            margin-top: 20px;
        }

        nav ul {
            list-style: none;
            padding: 0;
        }

        nav ul li {
            display: inline;
            margin-right: 20px;
        }

        nav a {
            text-decoration: none;
            color: #333;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header>
        <h1>Sobre Biologia</h1>
        <nav>
            <ul>
                <li><a href="/postagens">Postagens</a></li>
                <li><a href="/sobre">Sobre</a></li>
                <li><a href="/contato">Contato</a></li>
            </ul>
        </nav>
        <div class="botoes">
            <button onclick="login()" class="login">Entrar</button>
            <button onclick="cadastro()" class="cadastro">Cadastre-se</button>
        </div>
    </header>

    <section id="featured-post">
        <!-- Conteúdo existente aqui... -->
    </section>

    <section id="latest-posts">
        <h2>Últimas Postagens</h2>
        <ul id="post-list">
            <!-- Cada item da lista será adicionado dinamicamente aqui -->
        </ul>
    </section>

    <footer>
        <p>&copy; 2024 Meu Blog. Todos os direitos reservados.</p>
    </footer>

    <script>
        // Simulação de dados de postagem
        var posts = [
            { texto: "Conteúdo da postagem 1" },
            { texto: "Conteúdo da postagem 2" },
            { texto: "Conteúdo da postagem 3" }
        ];

        // Função para renderizar as postagens
        function renderPosts() {
            var postList = document.getElementById("post-list");
            postList.innerHTML = ""; // Limpa o conteúdo anterior da lista

            // Itera sobre o array de postagens e adiciona cada uma à lista
            posts.forEach(post => {
                var listItem = document.createElement("li");
                var paragraph = document.createElement("p");
                paragraph.textContent = post.texto;
                listItem.appendChild(paragraph);
                postList.appendChild(listItem);
            });
        }

        // Chama a função para renderizar as postagens ao carregar a página
        window.onload = renderPosts;
    </script>
</body>
</html>